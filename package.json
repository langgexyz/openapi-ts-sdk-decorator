{
  "name": "openapi-ts-sdk-decorator",
  "version": "1.0.3",
  "description": "OpenAPI TypeScript SDK decorators with TypeScript 5.x compatibility - provides decorator system and naming conventions for generated SDKs",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "keywords": [
    "openapi",
    "typescript",
    "typescript-5",
    "decorators",
    "stage3-decorators",
    "legacy-decorators",
    "sdk",
    "validation",
    "generator",
    "http",
    "rest",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langgexyz/openapi-ts-sdk-decorator.git"
  },
  "bugs": {
    "url": "https://github.com/langgexyz/openapi-ts-sdk-decorator/issues"
  },
  "homepage": "https://github.com/langgexyz/openapi-ts-sdk-decorator#readme",
  "author": "langgexyz",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "prebuild": "npm run clean",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "test": "node tests/index.js",
    "test:node": "node tests/index.js node",
    "test:browser": "echo 'ðŸŒ è¯·åœ¨æµè§ˆå™¨ä¸­æ‰“å¼€: tests/browser/index.html' && open tests/browser/index.html 2>/dev/null || echo 'æ‰‹åŠ¨æ‰“å¼€: tests/browser/index.html'",
    "test:compatibility": "node tests/node/compatibility.test.js",
    "test:naming": "node tests/node/naming-rules.test.js",
    "test:function-naming": "node tests/node/function-naming.test.js",
    "test:decorator-basics": "node tests/node/decorator-basics.test.js",
    "test:rooturi": "node tests/node/rooturi-normalization.test.js",
    "test:http-methods": "node tests/node/http-methods-validation.test.js"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "openapi-ts-sdk": "https://github.com/langgexyz/openapi-ts-sdk.git#semver:^1.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0 <6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
